<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_glass_card"
    android:padding="16dp"
    android:layout_marginVertical="8dp">

    <TextView
        android:id="@+id/tv_hud_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIND HUD"
        android:textSize="10sp"
        android:letterSpacing="0.2"
        android:textColor="@color/neon_cyan"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Energy Section -->
    <TextView
        android:id="@+id/tv_label_energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENERGY"
        android:textSize="10sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hud_title" />

    <ProgressBar
        android:id="@+id/progress_energy"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:layout_marginStart="8dp"
        android:progressDrawable="@drawable/bg_progress_gradient"
        android:progress="85"
        app:layout_constraintStart_toEndOf="@id/tv_label_energy"
        app:layout_constraintTop_toTopOf="@id/tv_label_energy"
        app:layout_constraintBottom_toBottomOf="@id/tv_label_energy" />

    <TextView
        android:id="@+id/tv_energy_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="85"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/progress_energy"
        app:layout_constraintTop_toTopOf="@id/tv_label_energy"
        app:layout_constraintBottom_toBottomOf="@id/tv_label_energy" />

    <!-- Focus Section -->
    <TextView
        android:id="@+id/tv_label_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOCUS"
        android:textSize="10sp"
        android:textColor="@color/text_secondary"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@id/tv_energy_value"
        app:layout_constraintTop_toTopOf="@id/tv_label_energy" />
        
    <TextView
        android:id="@+id/tv_focus_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIGH"
        android:textSize="10sp"
        android:textColor="@color/neon_purple"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_label_focus"
        app:layout_constraintTop_toTopOf="@id/tv_label_energy" />

    <!-- Prompt -->
    <TextView
        android:id="@+id/tv_daily_prompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="“今天不追求效率，只追求不摆烂。”"
        android:textColor="@color/text_white_alpha"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_energy" />

</androidx.constraintlayout.widget.ConstraintLayout>
