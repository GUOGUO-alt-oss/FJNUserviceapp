<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_bg_start"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 0. Soul Quote -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="不是我想做什么，\n是我决定为哪件事付出时间。"
            android:textColor="#60FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="serif"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

        <!-- 1. 主目标区 (Primary Goal) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主目标 (Primary Goal)"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#15FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:tint="@color/neon_cyan"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2026 考研上岸"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <!-- Toggle Switch (Mock) -->
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_goal_active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:trackTint="@color/neon_cyan"
                        app:thumbTint="@color/white"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这是我当前阶段最重要的事。"
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="32dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 2. 时间与阶段感 (Timeline) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="倒计时 (Timeline)"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#15FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余时间"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="312 Days"
                        android:textColor="@color/white"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-10dp"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前阶段：准备期"
                    android:textColor="@color/neon_cyan"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"/>

                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="25"
                    android:progressDrawable="@drawable/bg_progress_gradient"
                    android:layout_marginTop="8dp"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间不是压力，是方向。"
                    android:textColor="#60FFFFFF"
                    android:textSize="10sp"
                    android:layout_gravity="end"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 3. 子目标拆解区 (Milestones) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="里程碑 (Milestones)"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#15FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Milestone 1: Done -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:alpha="0.5">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/checkbox_on_background"
                        android:tint="@android:color/holo_green_light"
                        android:layout_marginEnd="12dp"/>
                    <TextView
                        android:id="@+id/tv_milestone_done"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="完成前端基础"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <!-- Milestone 2: In Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_media_play"
                        android:tint="@color/neon_cyan"
                        android:layout_marginEnd="12dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="准备英语材料"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due: Fri"
                        android:textColor="@color/neon_cyan"
                        android:textSize="10sp"/>
                </LinearLayout>

                <!-- Milestone 3: Pending -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/checkbox_off_background"
                        android:tint="@color/text_secondary"
                        android:layout_marginEnd="12dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="模拟面试"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 4. 本周执行区 (This Week) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本周承诺 (This Week)"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#15FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/cb_task_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="完成 JS 项目一"
                    android:textColor="@color/white"
                    android:buttonTint="@color/text_secondary"
                    android:paddingStart="12dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cb_task_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="背 50 个单词"
                    android:textColor="@color/white"
                    android:buttonTint="@color/text_secondary"
                    android:paddingStart="12dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cb_task_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="跑步 2 次"
                    android:textColor="@color/white"
                    android:buttonTint="@color/text_secondary"
                    android:paddingStart="12dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 5. 复盘与调整区 (Review) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复盘 (Review)"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#15FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="48dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本周进度感受："
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <TextView
                        android:id="@+id/btn_review_smooth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="顺"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/bg_glass_card"
                        android:textColor="@android:color/holo_green_light"
                        android:layout_marginEnd="8dp"/>
                        
                    <TextView
                        android:id="@+id/btn_review_stuck"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="卡"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/bg_glass_card"
                        android:textColor="@android:color/holo_orange_light"
                        android:layout_marginEnd="8dp"/>
                        
                    <TextView
                        android:id="@+id/btn_review_off"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="偏离"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/bg_glass_card"
                        android:textColor="@android:color/holo_red_light"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_review_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="没有失败选项，只有调整。"
                    android:textColor="#60FFFFFF"
                    android:textSize="10sp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
