<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外发光 (模拟光晕) -->
    <item>
        <shape android:shape="ring"
            android:thickness="12dp"
            android:useLevel="false">
            <gradient
                android:type="sweep"
                android:startColor="#00FFD700"
                android:centerColor="#80FFD700"
                android:endColor="#00FFD700" />
        </shape>
    </item>

    <!-- 主体环 (明亮质感) -->
    <item>
        <shape android:shape="ring"
            android:thickness="8dp"
            android:useLevel="false">
            <gradient
                android:type="sweep"
                android:startColor="#FFFFD700"
                android:centerColor="#FFFFF0E0"
                android:endColor="#FFFFA500" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFFFF"
                android:alpha="0.5" />
        </shape>
    </item>
    
    <!-- 纹理叠加 -->
    <item android:drawable="@drawable/ic_hunhuan_pattern_yellow" />
</layer-list>