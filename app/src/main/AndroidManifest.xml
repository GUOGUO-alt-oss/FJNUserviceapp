<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 新增：网络权限（必加，否则无法发起接口请求） -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 新增：Android 13+ 通知权限（解决权限异常） -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FJNUserviceapp">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ========== 核心添加：注册详情页Activity ========== -->
        <activity
            android:name=".ui.notify.CollegeNotifyDetailActivity"
            android:exported="false" />

        <!-- 新增：注册ChatDetailActivity -->
        <activity
            android:name=".ui.notify.ChatDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name=".ui.notify.NoticeDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- 新增：注册 LearningActivity (学习模块独立页面) -->
        <activity
            android:name=".ui.study.LearningActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- 新增：注册 NotifyActivity (通知模块独立页面) -->
        <activity
            android:name=".ui.notify.NotifyActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- 新增：注册 MineActivity (个人模块独立页面) -->
        <activity
            android:name=".ui.chat.ChatActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FJNUserviceapp" />
        <activity
            android:name=".ui.mine.MineActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>



</manifest>