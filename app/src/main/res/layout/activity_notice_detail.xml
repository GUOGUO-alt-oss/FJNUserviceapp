<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 返回按钮 -->
    <Button
        android:id="@+id/btnNoticeBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:background="#6C63FF"
        android:textColor="#FFFFFF"/>

    <!-- 通知标题 -->
    <TextView
        android:id="@+id/tvNoticeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="无标题"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <!-- 发布者+时间 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/tvNoticePublisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布者：未知发布者"
            android:textSize="12sp"
            android:textColor="#999999"/>
        <TextView
            android:id="@+id/tvNoticeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2026-01-06 08:41:13"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- 通知内容 -->
    <TextView
        android:id="@+id/tvNoticeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="无内容"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>

</LinearLayout>