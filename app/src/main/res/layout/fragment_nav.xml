<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.nav.NavFragment">

    <!-- 标题栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_glass_card"
        android:title="校园导航"
        android:titleTextColor="@color/white"
        android:titleMarginStart="32dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent">
        
        <!-- 自定义返回按钮 -->
        <ImageButton
            android:id="@+id/btn_custom_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:src="?attr/homeAsUpIndicator"
            android:background="@null"
            android:contentDescription="返回"
            android:scaleType="centerInside" />
            
    </androidx.appcompat.widget.Toolbar>

    <!-- 高德地图视图 -->
    <com.amap.api.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 校园POI列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/poi_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:background="@color/gradient_mid"
        android:elevation="8dp"
        android:alpha="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_poi" />

</androidx.constraintlayout.widget.ConstraintLayout>