<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="200dp"
    android:height="200dp"
    android:viewportWidth="200"
    android:viewportHeight="200">
    
    <!-- 百年魂环：简约的几何纹路，类似树木年轮或简单的符文 -->
    
    <!-- 环形断线 -->
    <path
        android:pathData="M100,20 A80,80 0 0 1 180,100"
        android:strokeColor="#60FFFFFF"
        android:strokeWidth="2"
        android:strokeAlpha="0.4"
        android:fillColor="#00000000"/>
        
    <path
        android:pathData="M100,180 A80,80 0 0 1 20,100"
        android:strokeColor="#60FFFFFF"
        android:strokeWidth="2"
        android:strokeAlpha="0.4"
        android:fillColor="#00000000"/>

    <!-- 简单的三角形符号 -->
    <path
        android:pathData="M100,40 L110,60 L90,60 Z"
        android:fillColor="#50FFFFFF" />
    <path
        android:pathData="M100,160 L110,140 L90,140 Z"
        android:fillColor="#50FFFFFF" />
    <path
        android:pathData="M40,100 L60,110 L60,90 Z"
        android:fillColor="#50FFFFFF" />
    <path
        android:pathData="M160,100 L140,110 L140,90 Z"
        android:fillColor="#50FFFFFF" />

    <!-- 内部装饰线 -->
    <path
        android:pathData="M100,50 A50,50 0 1 0 100,150 A50,50 0 1 0 100,50"
        android:strokeColor="#30FFFFFF"
        android:strokeWidth="1"
        android:fillColor="#00000000"/>
</vector>