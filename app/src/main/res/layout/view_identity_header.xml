<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="320dp">

    <!-- 1. åŠ¨æ€èƒŒæ™¯ (Placeholder for Video/Live Photo) -->
    <!-- Using ParticleView for dynamic background -->
    <com.example.fjnuserviceapp.ui.widget.ParticleView
        android:id="@+id/particle_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        
    <ImageView
        android:id="@+id/iv_dynamic_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@color/mine_bg_start" 
        android:alpha="0.2"/>
        
    <!-- Gradient Overlay for text readability -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_overlay_vertical" />

    <!-- 2. å¯äº¤äº’è™šæ‹Ÿå½¢è±¡ (3D Avatar) -->
    <!-- Using ShapeableImageView with elevation/shadow to simulate 3D -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_3d_avatar"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="10dp"
        android:outlineProvider="bounds" />
        
    <!-- Accessories (Example: Glasses) -->
    <ImageView
        android:id="@+id/iv_accessory_glasses"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_menu_view"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/iv_3d_avatar"
        app:layout_constraintStart_toStartOf="@id/iv_3d_avatar"
        app:layout_constraintEnd_toEndOf="@id/iv_3d_avatar"
        android:layout_marginTop="20dp"
        android:elevation="11dp"/>

    <!-- 3. å§“åä¸ŽçŠ¶æ€ -->
    <LinearLayout
        android:id="@+id/layout_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintStart_toEndOf="@id/iv_3d_avatar"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="æµ¦é¢–æ˜Š"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>

        <TextView
            android:id="@+id/tv_user_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CS Major | ID: 123456"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>

        <!-- å³æ—¶çŠ¶æ€ (Floating) -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            
            <TextView
                android:id="@+id/tv_live_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥ å†²åˆºæœŸæœ«"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@drawable/bg_glass_card"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />
        </FrameLayout>

    </LinearLayout>

    <!-- 4. æ¨¡å¼åˆ‡æ¢æŒ‰é’® (Parallel Identity) -->
    <ImageView
        android:id="@+id/btn_mode_switch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_rotate"
        android:background="@drawable/bg_circle_glass"
        android:padding="8dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
