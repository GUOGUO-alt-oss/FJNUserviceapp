<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Top Bar: Week Switcher & Import -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_prev_week"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_left"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:contentDescription="Previous Week" />

        <TextView
            android:id="@+id/tv_week_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="第 5 周"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_next_week"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:contentDescription="Next Week" />

        <ImageView
            android:id="@+id/btn_import"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@android:drawable/ic_menu_add"
            app:tint="@color/white"
            android:contentDescription="Import" />
            
    </LinearLayout>

    <!-- Week Day Header -->
    <LinearLayout
        android:id="@+id/header_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="40dp" 
        android:paddingEnd="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar">
        
        <!-- 7 Days -->
        <TextView style="@style/ScheduleHeaderDay" android:text="周一" />
        <TextView style="@style/ScheduleHeaderDay" android:text="周二" />
        <TextView style="@style/ScheduleHeaderDay" android:text="周三" />
        <TextView style="@style/ScheduleHeaderDay" android:text="周四" />
        <TextView style="@style/ScheduleHeaderDay" android:text="周五" />
        <TextView style="@style/ScheduleHeaderDay" android:text="周六" />
        <TextView style="@style/ScheduleHeaderDay" android:text="周日" />
    </LinearLayout>

    <!-- Scrollable Timetable -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_days"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Section Numbers Column (Left) -->
            <LinearLayout
                android:id="@+id/column_sections"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                
                <!-- 12 Sections -->
                <TextView style="@style/ScheduleSectionNum" android:text="1" />
                <TextView style="@style/ScheduleSectionNum" android:text="2" />
                <TextView style="@style/ScheduleSectionNum" android:text="3" />
                <TextView style="@style/ScheduleSectionNum" android:text="4" />
                <TextView style="@style/ScheduleSectionNum" android:text="5" />
                <TextView style="@style/ScheduleSectionNum" android:text="6" />
                <TextView style="@style/ScheduleSectionNum" android:text="7" />
                <TextView style="@style/ScheduleSectionNum" android:text="8" />
                <TextView style="@style/ScheduleSectionNum" android:text="9" />
                <TextView style="@style/ScheduleSectionNum" android:text="10" />
                <TextView style="@style/ScheduleSectionNum" android:text="11" />
                <TextView style="@style/ScheduleSectionNum" android:text="12" />
            </LinearLayout>

            <!-- Course Container -->
            <RelativeLayout
                android:id="@+id/course_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/column_sections">
                
                <!-- Background Grid Lines can be drawn programmatically or via background drawable -->
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>