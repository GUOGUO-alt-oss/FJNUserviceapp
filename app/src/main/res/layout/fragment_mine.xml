<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. 全屏粒子背景 -->
    <com.example.fjnuserviceapp.ui.widget.ParticleView
        android:id="@+id/particle_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <!-- 2. Header Area: 透明背景，头像+发光文字 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="60dp"
                android:paddingBottom="30dp"
                android:paddingHorizontal="24dp">

                <!-- 动态光环头像 -->
                <ImageView
                    android:id="@+id/iv_avatar_halo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bg_glass_button" 
                    android:alpha="0.5"
                    app:layout_constraintTop_toTopOf="@id/iv_avatar"
                    app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
                    app:layout_constraintStart_toStartOf="@id/iv_avatar"
                    app:layout_constraintEnd_toEndOf="@id/iv_avatar" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:padding="2dp"
                    android:src="@mipmap/ic_launcher_round"
                    app:strokeColor="@color/neon_cyan"
                    app:strokeWidth="2dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Name"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:shadowColor="@color/neon_purple"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@id/iv_avatar"
                    app:layout_constraintTop_toTopOf="@id/iv_avatar" />

                <TextView
                    android:id="@+id/tv_id_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: 123456 | CS Major"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toEndOf="@id/iv_avatar"
                    app:layout_constraintTop_toBottomOf="@id/tv_name" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✨ 本周是第5周"
                    android:textSize="12sp"
                    android:textColor="@color/neon_cyan"
                    android:background="@drawable/bg_glass_card"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="@id/tv_id_major"
                    app:layout_constraintTop_toBottomOf="@id/tv_id_major" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 3. Stats Area: 3D 风格卡片 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="10dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <include 
                        android:id="@+id/stat_card_term"
                        layout="@layout/item_profile_stat_card" />
                    
                    <include 
                        android:id="@+id/stat_card_courses"
                        layout="@layout/item_profile_stat_card" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include 
                        android:id="@+id/stat_card_gpa"
                        layout="@layout/item_profile_stat_card" />

                    <include 
                        android:id="@+id/stat_card_today"
                        layout="@layout/item_profile_stat_card" />
                </LinearLayout>
            </LinearLayout>

            <!-- 4. Function Entries: 悬浮毛玻璃列表 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_glass_card"
                android:paddingVertical="8dp">

                <include 
                    android:id="@+id/entry_schedule"
                    layout="@layout/item_function_entry" />
                
                <include 
                    android:id="@+id/entry_grades"
                    layout="@layout/item_function_entry" />

                <include 
                    android:id="@+id/entry_favorites"
                    layout="@layout/item_function_entry" />

                <include 
                    android:id="@+id/entry_import_history"
                    layout="@layout/item_function_entry" />

            </LinearLayout>

            <!-- 5. Settings Area -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SYSTEM"
                android:textSize="12sp"
                android:letterSpacing="0.2"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bg_glass_card"
                android:paddingVertical="8dp">

                <include 
                    android:id="@+id/entry_edit_profile"
                    layout="@layout/item_function_entry" />

                <include 
                    android:id="@+id/entry_settings"
                    layout="@layout/item_function_entry" />

                <include 
                    android:id="@+id/entry_about"
                    layout="@layout/item_function_entry" />

            </LinearLayout>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FJNU SERVICE v1.0.0"
                android:gravity="center"
                android:textSize="10sp"
                android:letterSpacing="0.3"
                android:textColor="#66FFFFFF"
                android:layout_marginTop="40dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
