<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gradient_background"> <!-- 核心：添加渐变背景 -->

    <!-- 返回按钮（保留原有样式，适配渐变背景） -->
    <Button
        android:id="@+id/btnNoticeBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:background="#6C63FF"
        android:textColor="#FFFFFF"/>

    <!-- 通知标题（文字改为白色，适配渐变背景） -->
    <TextView
        android:id="@+id/tvNoticeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="无标题"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
    android:layout_marginTop="20dp"/>

    <!-- 发布者+时间（文字改为浅白色，适配渐变背景） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/tvNoticePublisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布者：未知发布者"
            android:textSize="12sp"
            android:textColor="#E0E0E0"/> <!-- 修改：浅白色替代灰色 -->
        <TextView
            android:id="@+id/tvNoticeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2026-01-06 08:41:13"
            android:textSize="12sp"
            android:textColor="#E0E0E0"
        android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- 通知内容（文字改为白色，适配渐变背景） -->
    <TextView
        android:id="@+id/tvNoticeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="无内容"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
    android:layout_marginTop="20dp"/>

</LinearLayout>