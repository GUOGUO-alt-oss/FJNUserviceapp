<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 1. Base Shadow (Inner Shadow effect) -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="100%p"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#00000000"
                android:endColor="#80000000" />
        </shape>
    </item>
    
    <!-- 2. Specular Highlight (Top-Left shine) -->
    <item android:top="5dp" android:left="5dp" android:right="20dp" android:bottom="20dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="80%p"
                android:centerX="0.3"
                android:centerY="0.3"
                android:startColor="#60FFFFFF"
                android:centerColor="#20FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
    
    <!-- 3. Rim Light (Bottom reflection) -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF" 
                android:centerY="0.8"/>
        </shape>
    </item>
    
    <!-- 4. Glossy Surface -->
    <item>
         <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#20FFFFFF"/>
         </shape>
    </item>
</layer-list>