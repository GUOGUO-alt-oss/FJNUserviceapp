<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 十万年红色魂环，血色光芒 -->
    <item>
        <shape android:shape="ring"
            android:thickness="15dp"
            android:useLevel="false">
            <gradient
                android:type="sweep"
                android:startColor="#20FF0000"
                android:centerColor="#A0FF0000"
                android:endColor="#20FF0000" />
        </shape>
    </item>

    <!-- 主体环 (血红晶体质感) -->
    <item>
        <shape android:shape="ring"
            android:thickness="10dp"
            android:useLevel="false">
            <gradient
                android:type="sweep"
                android:startColor="#FF8B0000"
                android:centerColor="#FFFF0000"
                android:endColor="#FF8B0000" />
            <stroke
                android:width="1dp"
                android:color="#FFFFD700"
                android:alpha="0.6" /> <!-- 金色边框暗示高贵 -->
        </shape>
    </item>
    
    <!-- 纹理叠加 -->
    <item android:drawable="@drawable/ic_hunhuan_pattern_red" />
</layer-list>